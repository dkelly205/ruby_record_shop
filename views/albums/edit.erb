<h2>Edit Album</h2>

<form class="details" action="/albums/<%= @album.id %>" method="post">
  <p>
    <label for="name">Title:</label>
    <input type="text" name="title" id="title" value="<%= @album.title %>"required />
  </p>
  <p>
    <label for="name">Quantity:</label>
    <input type="number" name="quantity" id="quantity" value="<%= @album.quantity %>" required />
  </p>

  <p>
    <label for="name">Artist:</label>
    <select name="artist_id">
      <% for artist in @artists %>
      <option value="<%= artist.id %>"><%= artist.name %></option>
      <% if artist.id == @album.artist_id %>
      <option value="<%= artist.id %>" selected><%= artist.name %></option>

      <%end %>


      <% end %>
    </select>
  </p>

  <input class="form_button" type="submit" value="Save" />
  <a class="button" href="/albums">Cancel</a>


</form>
