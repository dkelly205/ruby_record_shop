<h2>Artists index</h2>

<a href="/artists/new">Add Artist</a>

<% @artists.each do |artist| %>

<p><%= artist.name %></p>
<p><%= artist.image %></p>

<a class="button" href="/artists/<%= artist.id %>/edit">Update</a>
<form method="post" action="/artists/<%= artist.id %>/delete">
  <input class="form_button" type="submit" value="Delete <%= artist.name %> "/>
</form>

<% end %>
